{
  "name": "@remirror/ui-modal",
  "description": "ui-modal utilities for remirror",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "homepage": "https://github.com/ifiokjr/remirror/tree/master/@remirror/ui-modal",
  "repository": "https://github.com/ifiokjr/remirror/tree/master/@remirror/ui-modal",
  "version": "0.4.2-canary.2",
  "main": "lib/index.js",
  "module": "lib/dist/ui-modal.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:babel": "babel src --out-dir lib --root-mode=upward --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "dev": "run-p dev:*",
    "dev:babel": "babel src --out-dir lib --root-mode=upward --extensions \".ts,.tsx\" -s --watch",
    "dev:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch",
    "lint": "tslint --project tsconfig.lint.json --config ../../tslint.json",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@babel/runtime": "^7.6.0",
    "@reach/visually-hidden": "^0.1.4",
    "@remirror/core": "0.4.2-canary.2",
    "@remirror/ui": "0.4.2-canary.2",
    "react-modal": "^3.10.1"
  },
  "peerDependencies": {
    "@emotion/core": "^10",
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "cjs": "lib/dist/ui-modal.cjs.js",
  "meta": {
    "sizeLimit": "70 KB"
  },
  "sideEffects": false
}
