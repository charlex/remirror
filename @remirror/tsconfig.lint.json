{
  "extends": "../support/tsconfig.base.json",
  "compilerOptions": {
    "declaration": false,
    "allowJs": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "jest-extended",
      "jest-axe",
      "@testing-library/jest-dom/extend-expect",
      "jest-emotion",
      "jest-enzyme",
      "jest-environment-enzyme"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["lib", "**/lib", "node_modules/**"]
}
