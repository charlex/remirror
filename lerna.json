{
  "packages": [
    "@remirror/*",
    "packages/*",
    "docs",
    "e2e",
    "examples/*"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "npmClient": "npm",
      "signGitCommit": true,
      "signGitTag": true,
      "allowBranch": [
        "master",
        "canary"
      ]
    }
  },
  "version": "0.5.0",
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__stories__/**",
    "/docs/**",
    "**/*.md",
    "**/*.mdx",
    "/support/**",
    "/e2e/**"
  ]
}
